<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:id="@+id/main_card_Layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
>

    <Button
            android:id="@+id/cardButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_border"
            android:textColor="@android:color/white"
    />

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/card_text_layout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:padding="5dp">

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/card_text_title_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

            <TextView
                    android:textAlignment="center"
                    android:text="1"
                    android:id="@+id/cardEnergyCost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="#0f54fa"
                    android:gravity="center"
            />

            <TextView
                    android:id="@+id/card_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Strike"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:gravity="center"
            />

        </LinearLayout>

        <TextView
                android:id="@+id/card_text_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="Deal 5 damage"
        />


    </LinearLayout>


</FrameLayout>